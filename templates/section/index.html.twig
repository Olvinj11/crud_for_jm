{% extends 'base.html.twig' %}

{% block title %}
  Section
{% endblock %}

{% block body %}
  <div class="container mt-4">
    <h1 class="mb-4">Section</h1>

    <table class="table table-striped">
      <thead>
        <tr>
          <th>Id</th>
          <th>Name</th>
          <th>Controller</th>
          <th>Plid</th>
          <th>Url</th>
          <th>Position</th>
          <th>Status</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        {% for section in sections %}
          <tr>
            <td>{{ section.id }}</td>
            <td>{{ section.name }}</td>
            <td>{{ section.controller }}</td>
            <td>{{ section.plid }}</td>
            <td>{{ section.url }}</td>
            <td>{{ section.position }}</td>
            <td>{{ section.status ? 'Yes' : 'No' }}</td>
            <td>
              <a href="{{ path('app_section_show', { id: section.id }) }}" class="btn btn-info btn-sm">Show</a>
              <a href="{{ path('app_section_edit', { id: section.id }) }}" class="btn btn-warning btn-sm">Edit</a>
            </td>
          </tr>
        {% else %}
          <tr>
            <td colspan="8" class="text-center">No records found</td>
          </tr>
        {% endfor %}
      </tbody>
    </table>

    <a href="{{ path('app_section_new') }}" class="btn btn-success mt-3">Create New</a>
  </div>
{% endblock %}
