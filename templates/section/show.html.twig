{% extends 'base.html.twig' %}

{% block title %}Section{% endblock %}

{% block body %}
    <h1>Section</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ section.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ section.name }}</td>
            </tr>
            <tr>
                <th>Controller</th>
                <td>{{ section.controller }}</td>
            </tr>
            <tr>
                <th>Plid</th>
                <td>{{ section.plid }}</td>
            </tr>
            <tr>
                <th>Url</th>
                <td>{{ section.url }}</td>
            </tr>
            <tr>
                <th>Position</th>
                <td>{{ section.position }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ section.status ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_section_index') }}">back to list</a>

    <a href="{{ path('app_section_edit', {'id': section.id}) }}">edit</a>

    {{ include('section/_delete_form.html.twig') }}
{% endblock %}
