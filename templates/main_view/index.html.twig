{% extends 'base.html.twig' %}

{% block title %}
  Main Views
{% endblock %}

{% block body %}
  <div class="container mt-4">
    <h1 class="mb-4">Main Views</h1>

    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Controller</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        {% for main_view in main_views %}
          <tr>
            <td>{{ main_view.id }}</td>
            <td>{{ main_view.name }}</td>
            <td>{{ main_view.controller }}</td>
            <td>
              <a href="{{ path('app_main_view_show', { id: main_view.id }) }}" class="btn btn-info">Show</a>
              <a href="{{ path('app_main_view_edit', { id: main_view.id }) }}" class="btn btn-warning">Edit</a>
              <form action="{{ path('app_main_view_delete', { id: main_view.id }) }}" method="POST" style="display:inline;">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ main_view.id) }}" />
                <button class="btn btn-danger">Delete</button>
              </form>
            </td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
    <div class="mb-3">
      <a href="{{ path('app_main_view_new') }}" class="btn btn-primary">Create New</a>
    </div>
  </div>
{% endblock %}
