<form method="post" action="{{ path('app_main_view_delete', {'id': main_view.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');" class="mt-3">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ main_view.id) }}">
    <button type="submit" class="btn btn-danger">Delete</button>
</form>
