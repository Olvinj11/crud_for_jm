{% extends 'base.html.twig' %}

{% block title %}
  Footer
{% endblock %}

{% block body %}
  <div class="container mt-4">
    <h1 class="mb-4">Footer Details</h1>

    <table class="table table-bordered table-striped">
      <tbody>
        <tr>
          <th>Id</th>
          <td>{{ footer.id }}</td>
        </tr>
        <tr>
          <th>Name</th>
          <td>{{ footer.name }}</td>
        </tr>
        <tr>
          <th>Icon</th>
          <td>{{ footer.icon }}</td>
        </tr>
        <tr>
          <th>Url</th>
          <td>
            <a href="{{ footer.url }}" target="_blank">{{ footer.url }}</a>
          </td>
        </tr>
        <tr>
          <th>Status</th>
          <td>{{ footer.status ? 'Yes' : 'No' }}</td>
        </tr>
        <tr>
          <th>Position</th>
          <td>{{ footer.position }}</td>
        </tr>
      </tbody>
    </table>

    <div class="d-flex justify-content-between">
      <a href="{{ path('app_footer_index') }}" class="btn btn-secondary">Back to list</a>
      <a href="{{ path('app_footer_edit', { id: footer.id }) }}" class="btn btn-warning">Edit</a>
    </div>

    {{ include('footer/_delete_form.html.twig') }}
  </div>
{% endblock %}
