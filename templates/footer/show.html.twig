{% extends 'base.html.twig' %}

{% block title %}Footer{% endblock %}

{% block body %}
    <h1>Footer</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ footer.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ footer.name }}</td>
            </tr>
            <tr>
                <th>Icon</th>
                <td>{{ footer.icon }}</td>
            </tr>
            <tr>
                <th>Url</th>
                <td>{{ footer.url }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ footer.status ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Position</th>
                <td>{{ footer.position }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_footer_index') }}">back to list</a>

    <a href="{{ path('app_footer_edit', {'id': footer.id}) }}">edit</a>

    {{ include('footer/_delete_form.html.twig') }}
{% endblock %}
