{% extends 'base.html.twig' %}

{% block title %}Footer index{% endblock %}

{% block body %}
    <h1>Footer index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Icon</th>
                <th>Url</th>
                <th>Status</th>
                <th>Position</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for footer in footers %}
            <tr>
                <td>{{ footer.id }}</td>
                <td>{{ footer.name }}</td>
                <td>{{ footer.icon }}</td>
                <td>{{ footer.url }}</td>
                <td>{{ footer.status ? 'Yes' : 'No' }}</td>
                <td>{{ footer.position }}</td>
                <td>
                    <a href="{{ path('app_footer_show', {'id': footer.id}) }}">show</a>
                    <a href="{{ path('app_footer_edit', {'id': footer.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_footer_new') }}">Create new</a>
{% endblock %}
